	"version": "2.0.0",
	"tasks": [
		{
			"label": "Admin: New User",
			"type": "shell",
			"command": "py \"admin/scripts/new_here.py\"",
			"problemMatcher": []
		},
		{
			"label": "Formatting: Format Whole File Tree",
			"type": "shell",
			"command": "py -m black .",
			"problemMatcher": []
		},
		{
			"label": "Formatting: Format Current File",
			"type": "shell",
			"command": "py -m black ${file}",
			"problemMatcher": []
		},
		{
			"label": "Linting: Lint Whole File Tree",
			"type": "shell",
			"command": "py -m flake8",
			"problemMatcher": []
		},
		{
			"label": "Linting: Lint Current File",
			"type": "shell",
			"command": "py -m flake8 ${file}",
			"problemMatcher": []
		},
		{
			"label": "Logs: Clear Logs",
			"type": "shell",
			"command": "py \"admin/scripts/clear_logs.py\"",
			"problemMatcher": []
		},
		{
			"label": "Testing: Get Coverage",
			"type": "shell",
			"command": "py \"admin/scripts/coverage.py\"",
			"problemMatcher": []
		},
		{
			"label": "Testing: Run Tests in Command Line",
			"type": "shell",
			"command": "py -m unittest discover ./tests/",
			"problemMatcher": []
		}
	]
}